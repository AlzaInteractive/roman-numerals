<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_height="match_parent"
        android:layout_width="@dimen/quiz_timer_height"
        android:gravity="center"
        android:id="@+id/timer"
        android:text="180"
        android:paddingLeft="@dimen/default_padding"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/stopwatch"
        android:textSize="@dimen/stat_font_size"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/quiznum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soal 3 dari 45"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="@dimen/default_margin"
            />

        <TextView
            android:id="@+id/quizskor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skor sementara = 110"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="@dimen/default_margin"
            />
        <TextView
            android:id="@+id/quizcorr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benar 2 dari 3"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="@dimen/default_margin"
            />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_roundcon"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="STOP QUIZ"
        android:textColor="@color/colorWhite"
        android:id="@+id/endQuiz"
        />

</LinearLayout>
